  [2011/12/05 v1.0 LaTex footnote macro for ExPex (JF)]
\RequirePackage{expex}
\makeatletter
\def\everyfootnote{%
   \keepexcntlocal
   \excnt=1
   \lingset{exskip=1ex,exnotype=roman,sampleexno=,
      labeltype=alpha,labelanchor=numright,labeloffset=.6em,
      textoffset=.6em}
}
\renewcommand{\@makefntext}[1]{%
   \everyfootnote
   \parindent=1em
   \noindent
   \@thefnmark.\enspace #1%
}
