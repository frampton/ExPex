  [2015/10/05 v2.0 LaTex footnote macro for ExPex (JF)]
\RequirePackage{expex}
\makeatletter
\def\everyfootnote{%
   \keepexcntlocal
   \excnt=1
   \lingset{exskip=1ex,exnotype=roman,sampleexno=,
      labeltype=alpha,labelanchor=numright,labeloffset=.6em,
      textoffset=.6em}
}
\renewcommand{\@makefntext}[1]{%
   \everyfootnote
   \parindent=1em
   \noindent
   \@thefnmark.\enspace #1%
}
\def\allocglfns#1{\begingroup
   \XKV@for@n{#1}\which{%
      \edef\temp{glfnmark\which}%
      \advance\c@footnote by 1
      \expandafter\xdef\csname \temp\endcsname
         {$\mskip1.5mu ^{\the\c@footnote}$}}\endgroup
         \ignorespaces}%
%        \lingset{belowexskip=0pt}\ignorespaces}%
\def\glfntext{\global\advance\c@footnote by 1 \footnotetext}
